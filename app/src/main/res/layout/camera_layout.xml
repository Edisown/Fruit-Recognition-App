<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/top_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:paddingStart="45dp"
        android:paddingTop="45dp"
        android:paddingEnd="20dp"
        android:paddingBottom="35dp" />


    <LinearLayout
        android:id="@+id/bottom_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingStart="45dp"
        android:paddingEnd="35dp"
        android:paddingTop="95dp"
        android:paddingBottom="45dp" />

    <ImageButton
        android:id="@+id/shot_cameraIB"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/shot_camera"
        app:tint="@color/white"
        />

    <ImageButton
        android:id="@+id/local_imageIB"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="775dp"
        android:layout_toLeftOf="@+id/shot_cameraIB"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/local_image"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/arrow_backIB"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="70dp"
        android:layout_margin="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/arrow_back"
        app:tint="@color/white"
        />




</RelativeLayout>
