        <item name="windowSplashScreenBackground">@color/red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logomdpi</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.FruitRecognitionApp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/lightGreen</item>
    </style>

</resources>